<article class="">
<section class="quartier_intro inside petite_france">
    <%= image_tag "agences/strasbourg.png", width: 500, height:500;%>
    <h1>Strasbourg</h1>
    <div class="quartier_intro_text">
        <%= sanitize @intro_text %>
    </div>
</section>
    <section class="inside">
        

        <ul class="filtre_tags quartiers_strasbourg">
            <% @quartiers.keys.each do |quartier_name| %>
                <li class="raccourci_achat"><%= link_to quartier_name, strasbourg_quartier_path(quartier_name.downcase.parameterize(separator: '-'))%></li>
            <% end %>
        </ul>
    </section>
    <div class="annonces_index">
    <section class="list_annonces">
        <ul class="new_annonces">
            <% @annonces.each do |annonce| %>
            <li>
            <%= link_to achat_show_path(annonce) do %>
            <%= render partial: "achats/annonce", locals: {annonce: annonce} %>
            <% end %>
            </li>
            <% end %>
        </ul>
        <div>
            <ul>
                <li>Alsace</li>
                <li>Bas-Rhin</li>
                <li>Haut-Rhin</li>
                <li>Strasbourg</li>
            </ul>
        </div>
    </section>
    <section class="carte_fixed">
        <div id="map"
            data-controller="map"
            data-map-markers-value="<%= @markers.to_json %>"
            data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>
    </section> 
    </div>
</article>
    