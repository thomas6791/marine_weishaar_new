<article class="inside">
<h1>Ajouter une nouvelle annonce</h1>
<%= simple_form_for @annonce,:url => url_for(:action => 'create', :controller => 'annonces'), :method => 'post' do |f| %>
    <%= f.input :titre %>
    <%= f.input :price,label:"Prix" %>
    <%= f.input :surface %>
    <%= f.input :type_bien, collection: Annonce::TYPE_BIEN, selected:0,label:"Type de bien" %>
    <%= f.input :ref_annonce %>
    <%= f.input :nb_pieces %>
    <%= f.input :description %>
    <%= f.input :photos, as: :file, input_html: { multiple: true } %>
    <div class="flex_input">
      <h3>Adresse</h3>
      <%= f.input :address,label:"Adresse" %>
      <%= f.input :zipcode,label:"Code postal" %>
      <%= f.input :city,label:"Ville/Commune" %>
       <%= f.input :quartier,label:"Quartier de Strasbourg" %>
      <%= f.input :country, priority: [ "France" ] %>
    </div>
   
    <div>
      <h3>Performances énergétiques</h2>
      <%= f.input :dpe, collection: Annonce::DPE, selected:0 %>
      <%= f.input :ges, collection: Annonce::GES, selected:0 %>
    </div>
   
    <%= f.input :nb_etage %>
    <%= f.input :chauffage, collection: Annonce::CHAUFFAGE, selected:0 %>
    <%= f.input :chauffage_mode,collection: Annonce::TYPE_CHAUFFAGE, selected:0 %>
    <%= f.input :etat_general %>
    <%= f.input :annee_construction,as: :date, start_year: Date.today.year - 120,
                              end_year: Date.today.year - 12, discard_day: true,
                              order: [:year]%>
    <h3>Options</h3>
    <%= f.input :cave %>
    <%= f.input :ascenseur %>
    <%= f.input :copropriete %>
    <%= f.input :cuisine_equipee %>
    <%= f.input :jardin %>
    <%= f.input :balcon %>
    <%= f.input :terrasse %>
    <%= f.input :garage %>
    <!-- [...] -->
    <%= f.submit %>
  <% end %>
  </article>